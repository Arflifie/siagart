{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "installCommand": "npm install",
                "buildCommand": "npm run build"
            }
        },
        {
            "src": "public/index.php",
            "use": "vercel-php@2.0.2",
            "config": {
                "installCommand": "composer install --no-dev --optimize-autoloader"
            }
        }
    ],
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "/public/build/$1"
        },
        {
            "src": "/(css|js|images|assets|fonts|svg|favicon.ico)(.*)",
            "dest": "/public/$1$2"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/public/index.php"
        }
    ]
}